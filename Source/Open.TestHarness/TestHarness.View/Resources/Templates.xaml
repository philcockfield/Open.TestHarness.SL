<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Open.Core.UI;component/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="ToolbarDivider">
        <StackPanel  Orientation="Horizontal" Width="2">
            <Border BorderBrush="{StaticResource Brush.Black.020}" BorderThickness="1,0,0,0" />
            <Border BorderBrush="{StaticResource Brush.White.085}" BorderThickness="1,0,0,0" />
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>