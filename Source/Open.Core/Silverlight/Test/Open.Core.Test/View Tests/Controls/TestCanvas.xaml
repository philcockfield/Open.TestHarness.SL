<UserControl 
    x:Class="Open.Core.UI.Silverlight.Test.View_Tests.Controls.TestCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Open.Core.UI;component/Styles/Common.xaml" />
                <ResourceDictionary Source="/Open.Core.UI;component/Styles/Shapes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid ShowGridLines="True" Width="300">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Margin="1" Background="HotPink" Width="100" Height="20" />
        <Border Grid.Column="0" Grid.Row="1" Margin="1" Background="HotPink" Width="100" Height="20" />
        <Border Grid.Column="0" Grid.Row="2" Margin="1" Background="HotPink" Width="100" Height="20" />
        <Border Grid.Column="0" Grid.Row="3" Margin="1" Background="HotPink" Width="100" Height="20" />
        
    </Grid>
</UserControl>
