<UserControl 
    x:Class="Open.Core.Test.ViewTests.TestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Controls="clr-namespace:Open.Core.UI.Controls;assembly=Open.Core.UI.Controls">
    
    <Grid ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Controls:Placeholder Text="One" Margin="3" Grid.Row="0" Grid.RowSpan="1" />
        <Controls:Placeholder Text="Two" Margin="3" Grid.Row="1" Grid.RowSpan="2" />

        
        <Button Command="{Binding MyCommand}" Content="Click Me" />
        
    </Grid>
</UserControl>
