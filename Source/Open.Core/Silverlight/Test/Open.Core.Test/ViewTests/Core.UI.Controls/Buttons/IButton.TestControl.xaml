<UserControl 
    x:Class="Open.Core.Test.ViewTests.Core.UI.Controls.Buttons.IButtonTestControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:Controls="clr-namespace:Open.Core.UI.Controls;assembly=Open.Core.UI.Controls">

    <UserControl.Resources>
        <!--NB: Generic style is inherited by the button--> 
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Padding" Value="30,5,30,5" />
        </Style>
    </UserControl.Resources>

    <Grid>

        <Controls:ViewFactoryContent x:Name="content" />

    </Grid>
</UserControl>
