<UserControl 
    x:Class="Open.Core.Common.Controls.Editors.PropertyGridStructure.Editors.StringEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Open.Core.UI.Controls;assembly=Open.Core.UI.Controls">
    
    <Controls:CoreTextBox 
            x:Name="textbox" 
            Text="{Binding Value, Mode=TwoWay}" 
            UpdateDataSourceOnEnterPress="True"
            x:FieldModifier="private" />
    
</UserControl>
