<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

  <LinearGradientBrush x:Key="Gradient.Vertical.Black-Transparent" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FF000000"/>
    <GradientStop Color="#00000000" Offset="1"/>
  </LinearGradientBrush>

    <LinearGradientBrush x:Key="Gradient.Vertical.Transparent-Black" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#00000000"/>
        <GradientStop Color="#FF000000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Gradient.Vertical.White-Transparent" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="#FFFFFFFF"/>
    <GradientStop Color="#00FFFFFF" Offset="1"/>
  </LinearGradientBrush>

    <LinearGradientBrush x:Key="Gradient.Vertical.Transparent-White" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#00FFFFFF"/>
        <GradientStop Color="#FFFFFFFF" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>